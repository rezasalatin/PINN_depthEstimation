{
    "layers": {
        "input_features": 4,
        "hidden_layers": 20,
        "hidden_width": 20,
        "output_features": 4
    },
    
    "adam_optimizer": {
        "max_it": 1000,
        "learning_rate": 1e-4,
        "scheduler_step_size": 10000,
        "scheduler_gamma": 0.8
    },

    "lbfgs_optimizer": {
        "max_it": 50000,
        "learning_rate": 1,
        "max_evaluation": 6.25e4,
        "history_size": 100,
        "tolerance_grad": 1e-5, 
        "tolerance_change": 1e-7,
        "line_search_fn": "strong_wolfe"
    },
    
    "loss": {
        "weight_fid_loss0": 1,
        "weight_fid_loss1": 1000,
        "weight_fid_loss2": 1,
        "weight_fid_loss3": 1,
        "weight_fid_loss": 1,
        "weight_res_loss": 1
    },
    
    "data_fidelity": {
        "dir": "../data/beach2d_reg.csv",
        "inputs": ["t", "x", "y", "z"],
        "outputs": ["h", "z", "u", "v"],
        "training_points": 100
    },

    "data_residual": {
        "dir": "../data/output_reg_pinn/",
        "inputs": {
            "t": {"file": "t", "requires_grad": ["true"]},
            "x": {"file": "X", "requires_grad": ["true"]},
            "y": {"file": "Y", "requires_grad": ["true"]},
            "z": {"file": "eta", "requires_grad": ["false"]}
        },
        "outputs": {
            "h": "dep.out",
            "z": "eta",
            "u": "u",
            "v": "v"
        },
        "numerical_model_snapshots": [0, 1, 2]
    },
    
    "numerical_model": {
        "nx": 251,
        "ny": 501,
        "dx": 2,
        "dy": 2,
        "interval_x": 20,
        "interval_y": 20
    },
    
    "plot": {
        "figure_size": 14,
        "x_limits": [150, 450],
        "y_limits": [0, 1000]
    }
}
